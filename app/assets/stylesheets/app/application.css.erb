.full-screen-overlay
{
    height:100%;
    width:100%;
    position:fixed;
    left:0;
    top:0;
    z-index:1 !important;
    background-color:black;

    filter: alpha(opacity=85); /* internet explorer */
    -khtml-opacity: 0.85;      /* khtml, old safari */
    -moz-opacity: 0.85;       /* mozilla, netscape */
    opacity: 0.85;           /* fx, safari, opera */
}

.loading-indicator
{
    height:100%;
    width:100%;
    position:fixed;
    left:0;
    top:0;
    z-index:1 !important;
    background: url(<%= asset_path 'ajax-loader.gif' %>) center no-repeat;
}

.parcela-image{
    height: 180px;
    width: 180px;
}

.status-bar-wrapper{
    margin:20px 0px 0px 80px;
    color:white;
    font-weight: normal;
}

