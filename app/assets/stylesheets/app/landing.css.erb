body{
    background-color: black;
}

.landing-content{
    top: 10%;
    position: fixed;
    left: 0 !important;
    right: 0 !important;
    text-align: center;
}

.logo-text {
    font-size: 50px;
    font-weight: bold;
    text-shadow: none;
    text-transform: uppercase;
    font-family: "News Cycle", "Arial Narrow Bold", sans-serif;
    color: black;
    line-height: 60px;
    vertical-align: middle;
}

.iso-logo{
    margin-bottom: 20px;
    width: 620px;
    margin-right: auto;
    margin-left: auto;
}

.landing-search{
    border: 1px solid black;
    width: 100%;
    padding: 20px;

    /* Fallback for web browsers that don't support RGBa */
    background-color: rgb(255, 255, 255);
    /* RGBa with 0.6 opacity */
    background-color: rgba(255, 255, 255, 0.8);
    /* For IE 8*/
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000)";
}

.logo{
    position:relative;
    float:right;
    height: 80px;
}

.search-button{
    height:40px;
    width: 250px;
    font-size: 25px;
    font-weight: normal;
    line-height: 40px;
}

.current-target{
   margin-bottom: 10px;
}